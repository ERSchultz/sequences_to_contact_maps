cd ~/sequences_to_contact_maps
conda create --name seq2contact_pytorch1.7.1_cuda10.2 -y
source activate seq2contact_pytorch1.7.1_cuda10.2
conda install -y pytorch=1.7.1 torchvisioncudatoolkit=10.2 matplotlib imageio numpy jupyterlab pillow seaborn numba pandas scikit-learn scipy -c pytorch -c conda-forge -c nvidia &>> \logFiles\conda_env.log
pip install pynvml, hic-straw


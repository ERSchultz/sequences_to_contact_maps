#! /bin/bash
#SBATCH --job-name=UNet
#SBATCH --output=logFiles/UNet.out
#SBATCH --time=02:00:00
#SBATCH --partition=gpu2
#SBATCH --gres=gpu:1
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=2
#SBATCH --mem-per-cpu=5000
#SBATCH --mem-per-gpu=10000

dirname="../../../project2/depablo/erschultz/dataset_04_06_21"
nEpochs=15
nf=8
lr=0.01
batchSize=8
numWorkers=2
milestones='5-10'
gamma=0.1
k=2

ofile="UNet_nEpochs${nEpochs}_nf${nf}_lr${lr}_milestones${milestones}"
logfile="logFiles/${ofile}.log"


source activate seq2contact_pytorch
python3 ~/sequences_to_contact_maps/UNet.py --data_folder $dirname --n_epochs $nEpochs --nf $nf --batch_size $batchSize --num_workers $numWorkers --milestones $milestones --gamma $gamma --k $k --ofile $ofile >> $logfile
